    <form action="/quiz/result" method="post">
        {% for question in questions %}
            <h2>{{ question.text}}</h2>
            <div class="questioncardContainer">
                {% for answer in question.answers %}
                <div class="questioncard">
                    <li>
                        <input 
                        type="radio"
                        id="{{ question.id }}" 
                        name="{{ question.id }}"
                        value="{{ answer }}">
                        <label for="answers">{{ answer }}</label>
                    </li>
                </div>
                {% endfor %}
            </div>
            {% endfor %}
        <button type="submit">Skicka</button>
    </form>